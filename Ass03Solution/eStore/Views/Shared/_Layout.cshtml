<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - eStore</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/eStore.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/HomeStyle.css" asp-append-version="true" />
</head>
<body>
	<div class="header">
		<ul style="display:flex">
			<li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
			<li><a asp-area="" asp-controller="Product" asp-action="Index">Shopping</a></li>
			<li><a asp-area="" asp-controller="Product" asp-action="Search">Search</a></li>
		</ul>
	</div>
	<div class="container" style="margin-top:30px">
		<div class="row">
			<div class="col-md-3">
				<ul >
					<li><a asp-area="" asp-controller="Product" asp-action="Index">Shopping</a></li>
						<li class="li-child"><a asp-area="" asp-controller="Product" asp-action="Index">Shopping</a></li>
					<li class="li-child"><a asp-area="" asp-controller="Product" asp-action="Search">Search</a></li>
					
						<li class="li-child"><a asp-area="" asp-controller="Member" asp-action="Index">Members</a></li>
						<li class="li-child"><a asp-area="" asp-controller="Order" asp-action="Index">Orders</a></li>
						<li class="li-child"><a asp-area="" asp-controller="Order" asp-action="Statistics">Statistics</a></li>
					<li><a asp-area="" asp-controller="Access" asp-action="Logout">Logout</a></li>
				</ul>
			</div>
			<div class="col-md-9">
				@RenderBody()
			</div>
		</div>
	</div>
@* 
	<div class="container">
		<main role="main" class="pb-3">
			
		</main>
	</div> *@

	<footer class="border-top footer text-muted">
		
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
